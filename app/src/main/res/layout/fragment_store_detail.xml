<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/collapsing_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentScrim="@android:color/transparent"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/tb_store_detail"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@android:color/transparent"
                        android:translationZ="1dp"
                        app:layout_collapseMode="pin">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/tb_store_detail_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="16dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ic_store_detail_arrow_back"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_arrow_left"
                                android:tint="@color/white"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ic_store_detail_home"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_home_white"
                                android:tint="@color/white"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_store_detail_name_in_tb"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/ic_store_detail_home"
                                app:layout_constraintStart_toEndOf="@id/ic_store_detail_arrow_back"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="{주점명}" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.appcompat.widget.Toolbar>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_detail_store_banner"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:fitsSystemWindows="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_launcher_background"
                            app:layout_collapseMode="parallax"
                            app:layout_constraintDimensionRatio="w, 1:1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:layout_width="match_parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/store_detail_content_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:paddingHorizontal="32dp"
                            android:paddingVertical="24dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/img_detail_store_banner">

                            <TextView
                                android:id="@+id/store_detail_content_store_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="{주점명}"
                                android:textColor="@color/gray_900"
                                android:textSize="20sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_store_detail_content_tag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:elevation="0dp"
                                app:cardCornerRadius="4dp"
                                app:cardElevation="0dp"
                                app:layout_constraintBottom_toBottomOf="@id/store_detail_content_store_name"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@id/store_detail_content_store_name">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/red_orange_50"
                                    android:paddingHorizontal="8dp"
                                    android:paddingVertical="4dp">

                                    <TextView
                                        android:id="@+id/tv_store_detail_content_tag"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="영업중"
                                        android:textColor="@color/red_orange_500"
                                        android:textSize="14sp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        tools:text="영업중" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/tv_store_detail_content_region"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="{지역}"
                                android:textColor="@color/gray_600"
                                android:textSize="14sp"
                                app:layout_constraintStart_toStartOf="@id/store_detail_content_store_name"
                                app:layout_constraintTop_toBottomOf="@id/store_detail_content_store_name" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_store_detail_content_region_spacer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/ic_vertical_line"
                                app:layout_constraintBottom_toBottomOf="@id/tv_store_detail_content_region"
                                app:layout_constraintStart_toEndOf="@id/tv_store_detail_content_region"
                                app:layout_constraintTop_toTopOf="@id/tv_store_detail_content_region" />

                            <TextView
                                android:id="@+id/tv_store_detail_content_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="{업태}"
                                android:textColor="@color/gray_600"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="@id/tv_store_detail_content_region"
                                app:layout_constraintStart_toEndOf="@id/iv_store_detail_content_region_spacer"
                                app:layout_constraintTop_toTopOf="@id/tv_store_detail_content_region" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:background="@color/gray_50"
                            app:layout_constraintTop_toBottomOf="@id/store_detail_content_layout" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <!--        <LinearLayout-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="match_parent"-->
            <!--            android:orientation="vertical">-->

            <!--            <com.google.android.material.tabs.TabLayout-->
            <!--                android:id="@+id/tl_store_Detail"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content" />-->

            <!--            <androidx.viewpager2.widget.ViewPager2-->
            <!--                android:id="@+id/vp_store_detail"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="0dp"-->
            <!--                android:layout_weight="1" />-->

            <!--        </LinearLayout>-->

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_store_detail_space_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="32dp"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:id="@+id/layout_store_detail_space_info_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ic_store_detail_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_location_on_lightgrey"
                                android:tint="@color/gray_200" />

                            <TextView
                                android:id="@+id/tv_store_detail_location"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:text="서울시 강남구 역삼동 12-198"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_store_detail_space_info_call"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@id/layout_store_detail_space_info_location">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ic_store_detail_call"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_call"
                                android:tint="@color/gray_200" />

                            <TextView
                                android:id="@+id/tv_store_detail_call"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:text="02-1234-5678"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_store_detail_space_info_open"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@id/layout_store_detail_space_info_call">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ic_store_detail_open"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_alarm"
                                android:tint="@color/gray_200" />

                            <TextView
                                android:id="@+id/tv_store_detail_open"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="영업중"
                                android:textColor="@color/black" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ic_store_detail_open_between"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_ellipse"
                                android:tint="@color/gray_100" />

                            <TextView
                                android:id="@+id/tv_store_detail_open_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="02:00에 영업 종료"
                                android:textColor="@color/black" />

                        </LinearLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/spacer_store_detail_space_info"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/gray_50"
                        app:layout_constraintTop_toBottomOf="@id/layout_store_detail_space_info" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_store_detail_area_pick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="32dp"
                        app:layout_constraintTop_toBottomOf="@id/spacer_store_detail_space_info">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ic_store_detail_area_pick_favorite"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_favorite"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_store_detail_area_pick_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="공간 pick"
                            app:layout_constraintBottom_toBottomOf="@id/ic_store_detail_area_pick_favorite"
                            app:layout_constraintStart_toEndOf="@id/ic_store_detail_area_pick_favorite"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="68dp"
                            android:layout_marginTop="12dp"
                            android:background="#f0ff0f"
                            app:layout_constraintTop_toBottomOf="@id/ic_store_detail_area_pick_favorite" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_store_detail_representative_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="32dp"
                        app:layout_constraintTop_toBottomOf="@id/layout_store_detail_area_pick">

                        <TextView
                            android:id="@+id/tv_store_detail_representative_menu_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="메뉴 대표 이미지"
                            android:textColor="@color/gray_800"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_store_detail_representative_menu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp"
                            app:layout_constraintTop_toBottomOf="@id/tv_store_detail_representative_menu_title" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/spacer_store_detail_representative_menu"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/gray_50"
                        app:layout_constraintTop_toBottomOf="@id/layout_store_detail_representative_menu" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_store_detail_alcohol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="32dp"
                        app:layout_constraintTop_toBottomOf="@id/spacer_store_detail_representative_menu">

                        <TextView
                            android:id="@+id/tv_store_detail_alcohol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="주류"
                            android:textColor="@color/gray_800"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_store_detail_alcohol"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constraintTop_toBottomOf="@id/tv_store_detail_alcohol" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/spacer_store_detail_alcohol"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/gray_50"
                        app:layout_constraintTop_toBottomOf="@id/layout_store_detail_alcohol" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_store_detail_side_dish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="32dp"
                        app:layout_constraintTop_toBottomOf="@id/spacer_store_detail_alcohol">

                        <TextView
                            android:id="@+id/tv_store_detail_side_dish"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="안주"
                            android:textColor="@color/gray_800"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_store_detail_side_dish"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constraintTop_toBottomOf="@id/tv_store_detail_side_dish" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/spacer_store_detail_side_dish"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@color/gray_50"
                        app:layout_constraintTop_toBottomOf="@id/layout_store_detail_side_dish" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_store_detail_similar_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="32dp"
                        app:layout_constraintTop_toBottomOf="@id/spacer_store_detail_side_dish">

                        <TextView
                            android:id="@+id/tv_store_detail_similar_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="유사한 공간 추천"
                            android:textColor="@color/gray_800"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_store_detail_similar_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@id/tv_store_detail_similar_area" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:background="#ff0000"
                        app:layout_constraintTop_toBottomOf="@id/layout_store_detail_similar_area" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <LinearLayout
            android:id="@+id/store_detail_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_store_detail_share"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_share" />

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_store_detail_bookmark"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_bookmark_black"
                android:tint="@color/gray_800" />

            <View
                android:layout_width="24dp"
                android:layout_height="match_parent" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_900">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="32dp"
                        android:paddingVertical="16dp"
                        android:text="지도 보기"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
